@page
@model JoinDrive_cs
@{
    ViewData["Title"] = "Mitfahrgelegenheit finden";
    Layout = null;
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>Mitfahrgelegenheit finden</title>
    <link rel="stylesheet" href="~/css/Stylesheet.css">
    <style>
        body {
            background: url('..//Images/Background2.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        .join-container {
            max-width: 1000px;
            margin: 50px auto;
            background: rgba(255, 255, 255, 0.9);
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

            .join-container h1 {
                text-align: center;
                color: #2c3e50;
                margin-bottom: 30px;
            }

        .ride-entry {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background-color: #f0f0f0;
            border-radius: 12px;
            padding: 15px 20px;
            margin-bottom: 20px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
            cursor: pointer;
            border: 2px solid transparent;
            transition: border-color 0.3s;
        }

            .ride-entry.selected {
                border-color: #3498db;
            }

            .ride-entry img {
                width: 60px;
                height: 60px;
                border-radius: 50%;
                margin-right: 20px;
            }

        .ride-info {
            display: flex;
            align-items: center;
            gap: 30px;
            flex-grow: 1;
        }

            .ride-info div {
                font-weight: 500;
                color: #2c3e50;
            }

        .ride-meta {
            white-space: nowrap;
            color: #3498db;
            font-weight: bold;
        }

        .join-button, .back-button {
            display: block;
            margin: 20px auto 0 auto;
            padding: 15px 30px;
            background-color: #3498db;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1.1em;
            cursor: pointer;
            transition: background-color 0.3s;
            width: 250px;
        }

            .join-button:hover {
                background-color: #2980b9;
            }

        .back-button {
            background-color: #e0e0e0;
            color: #2c3e50;
        }

            .back-button:hover {
                background-color: #c7c7c7;
            }
    </style>
    <script>
        let selectedRideId = null;

        function selectRide(element, id) {
            document.querySelectorAll('.ride-entry').forEach(e => e.classList.remove('selected'));
            element.classList.add('selected');
            selectedRideId = id;
            document.getElementById('fahrtId').value = id;
        }

        function joinSelectedRide() {
            if (!selectedRideId) {
                alert("Bitte wähle eine Fahrt aus.");
                return;
            }
            document.getElementById('joinForm').submit();
        }
    </script>
</head>
<body>
    <div class="join-container">
        <h1>Mitfahrgelegenheiten</h1>

        @if (Model.Fahrten.Any())
        {
            foreach (var fahrt in Model.Fahrten)
            {
                var freiePlaetze = fahrt.Sitze - fahrt.Passagiere.Count;
                <div class="ride-entry" onclick="selectRide(this, @fahrt.FahrtId)">
                    <img src="~/Images/Profile.png" alt="Profilbild">
                    <div class="ride-info">
                        <div>@fahrt.Fahrer.Name</div>
                        <div class="ride-meta">@fahrt.StartDatum.ToString("f") Uhr</div>
                        <div>@fahrt.Route.StartOrt → @fahrt.Route.ZielOrt</div>
                        <div>@freiePlaetze/@fahrt.Sitze Plätze frei</div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Keine verfügbaren Fahrten gefunden.</p>
        }

        <form method="post" id="joinForm">
            <input type="hidden" name="FahrtId" id="fahrtId" />
            <button type="button" class="join-button" onclick="joinSelectedRide()">Mitfahren</button>
            <button type="button" class="back-button" onclick="location.href='@Url.Page("/Overview")'">Zurück</button>
        </form>
    </div>
</body>
</html>