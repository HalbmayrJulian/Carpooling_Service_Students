@page
@model MyRides_cs
@{
    ViewData["Title"] = "Meine Fahrten";
    Layout = null;
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>Meine Fahrten</title>
    <link rel="stylesheet" href="~/css/Stylesheet.css">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: url('..//Images/Background2.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .rides-container {
            max-width: 1000px;
            margin: 50px auto;
            background: rgba(255, 255, 255, 0.95);
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        }

        h1 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 30px;
        }

        h2 {
            color: #2980b9;
            margin-top: 40px;
            margin-bottom: 20px;
        }

        .ride-box {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background: #f4f4f4;
            border-radius: 12px;
            margin-bottom: 15px;
            transition: background 0.3s, transform 0.2s;
            text-decoration: none;
        }

            .ride-box:not(.disabled):hover {
                background: #eaf6ff;
                transform: scale(1.01);
                cursor: pointer;
            }

        .ride-info {
            display: flex;
            flex-direction: column;
        }

            .ride-info strong {
                font-size: 1.1em;
                color: #2c3e50;
            }

        .ride-meta {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            text-align: right;
        }

            .ride-meta span {
                font-size: 0.95em;
                color: #555;
            }

        .ride-box.disabled {
            background: #dddddd;
            pointer-events: none;
        }

            .ride-box.disabled:hover {
                transform: none;
                background: #dddddd;
                cursor: default;
            }

        .back-button {
            display: block;
            margin: 40px auto 0 auto;
            padding: 15px 30px;
            background-color: #e0e0e0;
            color: #2c3e50;
            border: none;
            border-radius: 10px;
            font-size: 1em;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-align: center;
        }

            .back-button:hover {
                background-color: #c7c7c7;
            }
    </style>
</head>
<body>
    <div class="rides-container">
        <h1>Meine Fahrten</h1>

        <div id="open-rides-section">
            <h2>🚗 Offene Fahrten</h2>
            @foreach (var ride in Model.Fahrten)
            {
                if (!ride.Abgeschlossen)
                {
                    <a class="ride-box" asp-page="/EditPage1" asp-route-id="@ride.FahrtId">
                        <div class="ride-info">
                            <strong>@ride.Route.StartOrt → @ride.Route.ZielOrt</strong>
                            <span>Startdatum: @ride.StartDatum.ToShortDateString()</span>
                            <span>Uhrzeit: @ride.StartDatum.ToString("HH\\:mm")</span>
                            @if (ride is Fahrt fahrt)
                            {
                                <span>@fahrt.Sitze Plätze belegt</span>
                            }
                        </div>
                    </a>
                }
            }
        </div>

        <div id="closed-rides-section">
            <h2>✅ Abgeschlossene Fahrten</h2>
            @foreach (var ride in Model.Fahrten)
            {
                if (ride.Abgeschlossen)
                {
                    <div class="ride-box disabled">
                        <div class="ride-info">
                            <strong>@ride.Route.StartOrt → @ride.Route.ZielOrt</strong>
                            <span>Enddatum: @ride.EndDatum.ToShortDateString()</span>
                            @if (ride is Fahrt fahrt)
                            {
                                <span>@fahrt.Sitze Plätze belegt</span>
                            }
                        </div>
                    </div>
                }
            }
        </div>

        <button class="back-button" onclick="location.href='@Url.Page("/Profil")'">Zurück</button>
    </div>
</body>
</html>
